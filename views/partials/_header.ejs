<header>

  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLS</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if(!username) { %>
          <a class="nav-item nav-link" method="POST" href="/login">Login</a>

        <% } %>
      </div>

    </div>


    <%if(username) {console.log(username)%>
      <form action="/logout" method="POST" class="form-inline">
        <a class="navbar-brand" style="padding-left: 100px;">Logged in as: <span style="color: rgba(255, 255, 255, 0.9); font-size: 20px; padding: 3px;"><%= username %></span></a>
        <button type="submit" class="btn btn-outline-dark">Logout</button>
      </form>
      <% } else { %>
        <form action="/login" method="POST" >
          <input class="" type="text" name="username" placeholder="Username">
          <button type="submit" class="btn btn-outline-dark">Submit Username</button> 
        </form>
      <% } %>
    
    
  </nav>
</header>